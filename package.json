{
  "name": "notification-quark",
  "private": false,
  "version": "1.0.1",
  "type": "module",

  "files": [
    "dist",
    "src/components/",
    "src/stores/"
  ],
  "main": "./dist/notification-quark.umd.js",
  "module": "./dist/notification-quark.es.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/es.js",
      "require": "./dist/notification-quark.umd.js"
    },
    "./dist/style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "keywords": [
    "vue",
    "vue3",
    "vite",
    "pinia",
    "notification",
    "notification-quark"
  ],
  "scripts": {
    "generate:types": "vue-tsc --declaration --emitDeclarationOnly --outdir ./dist",
    "dev": "vite",
    "build": "vite build && npm run generate:types",
    "preview": "vite preview",
    "build-only": "vite build"
  },
  "dependencies": {
    "pinia": "^2.1.7",
    "vite-plugin-dts": "^3.6.4",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^18.19.3",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "@vue/tsconfig": "^0.4.0",
    "npm-run-all2": "^6.1.1",
    "typescript": "~5.2.0",
    "vite": "^4.4.11",
    "vue-tsc": "^1.8.27"
  }
}
